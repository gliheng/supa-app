{
  "type": "page",
  "title": "Form demo",
  "children": {
    "type": "form",
    "data": {
      "type": "1"
    },
    "children": [
      {
        "type": "radio",
        "button": true,
        "options": [
          {
            "label": "Type 1",
            "value": "1"
          },
          {
            "label": "Type 2",
            "value": "2"
          }
        ]
      },
      {
        "type": "div",
        "children": [
          {
            "type": "input",
            "name": "name",
            "when": "(= type '1')"
          },
          {
            "type": "checkbox",
            "name": "agree",
            "label": "I Agree",
            "when": "(= type '2')"
          }
        ]
      }
    ]
  }
}